<div class="form-contact">
             <div class="inputLayout">
                    <div class="inputBx">
                        <input type="text" id="contact-name"  placeholder="Enter your Name">
                        <p class="error-message"></p>
                        </div>
                    <div class="inputBx">
                        <input type="text" id="contact-email" placeholder="Enter your Email">
                        <p class="error-message"></p>
                        </div>
              </div>
              <div class="inputBx">
                  <input type="text" id="contact-subject" placeholder="Subject">
                  <p class="error-message"></p>
              </div>
              <div class="inputBx">
                   <textarea name="" id="contact-message" cols="30" rows="10" placeholder="Message..."></textarea>
                   <p class="error-message"></p>
              </div>
                <button type="submit" class="contact-btn">Send Message</button>
</div>







            </div>
            <div class="right-col">
                <h3>Contact Details</h3>
                
                <div class="contact-bx">
                    <i class='bx bxs-map'></i>
                    <div class="content">
                        <h4>Our Office</h4>
                        <p>123 Street, New York, USA</p>
                    </div>
                </div>
                <div class="contact-bx">
                    <i class='bx bxs-phone'></i>
                    <div class="content">
                        <h4>Call Us</h4>
                        <p>+012 345 67890</p>
                    </div>
                </div>
                <div class="contact-bx">
                    <i class='bx bxs-envelope' ></i>
                    <div class="content">
                        <h4>Mail Us</h4>
                        <p>info@example.com</p>
                    </div>
                </div>


